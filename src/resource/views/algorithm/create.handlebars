<script>
    document.getElementsByClassName("close-btn")[0].onclick = function (e) {
        window.location.href = '/';
    }
    // Đảm bảo rằng khi nhấn nút "+" cho lý thuyết, sẽ tạo thêm các ô nhập liệu
    document.getElementById("theory-button").addEventListener("click", function () {
        const theorySection = document.getElementById("theory-section");
        const newTheoryItem = document.createElement("div");
        newTheoryItem.classList.add("theory-item");

        const theoryCount = theorySection.querySelectorAll(".theory-item").length + 1;

        newTheoryItem.innerHTML = `
            <input type="text" name="theory-title-${theoryCount}" required placeholder="Tiêu đề lý thuyết">
            <input type="text" name="theory-description-${theoryCount}" required placeholder="Mô tả lý thuyết">
        `;

        theorySection.insertBefore(newTheoryItem, document.getElementById("theory-button"));
    });

    // Đảm bảo rằng khi nhấn nút "+" cho ví dụ, sẽ tạo thêm các ô nhập liệu
    document.getElementById("example-button").addEventListener("click", function () {
        const exampleSection = document.getElementById("example-section");
        const newExampleItem = document.createElement("div");
        newExampleItem.classList.add("example-item");

        const exampleCount = exampleSection.querySelectorAll(".example-item").length + 1;

        newExampleItem.innerHTML = `
            <input type="text" name="example-title-${exampleCount}" required placeholder="Tiêu đề ví dụ">
            <input type="text" name="example-description-${exampleCount}" required placeholder="Mô tả ví dụ">
        `;

        exampleSection.insertBefore(newExampleItem, document.getElementById("example-button"));
    });
</script>